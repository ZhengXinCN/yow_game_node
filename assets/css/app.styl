  font-family: franklin-gothic

.tw .hero-unit
  padding-bottom: 20px
  padding-top: 20px

.tw .hero-unit .well
  color: black

.tw #result .hero-unit
  text-align: center

padded_span()
  margin-left: 0.5em
  margin-right: 0.5em

color_hint(c)
  color: c
  text-decoration: none
  padded_span()

.tw p strong
  padded_span()

.tw p button
  padded_span()

.tw a .obstacle
  color_hint(red)

.tw a .marble
  color_hint(green)

.tw a .hole
  color_hint(black)