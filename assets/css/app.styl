.css-radar
  width 300px
  height 300px
  position relative
  background-image -webkit-linear-gradient(top, #5BC0DE, #2F96B4)
  border-radius 150px
  box-shadow inset  0px  0px 2px rgba(  0,  0,  0,0.8),
             inset  2px  2px 4px rgba(255,255,255,0.5),
             inset -2px -2px 4px rgba(  0,  0,  0,0.3)

  .c1 { width: 33%; height: 33%; margin-top: 33%; margin-left: 33%; }
  .c2 { width: 66%; height: 66%; margin-top: 17%; margin-left: 17%; }
  .c3 { width: 80%; height: 80%; margin-top: 10%; margin-left: 10%; }
  .c4 { width: 82%; height: 82%; margin-top:  9%; margin-left:  9%; }
  .axis-v { height: 100%; width:  0px; margin-left: 50%; }
  .axis-h { height:  0px; width: 100%; margin-top:  50%; }

  .c1, .c2, .c3, .c4, .c5
    border 1px solid rgba(255,255,255,0.5)
    border-radius 150px
    position absolute

  .axis-v, .axis-h 
    border 1px solid rgba(#78D0E5,0.7)
    position absolute

  .radar-label, .radar-label-disabled
    position absolute
    line-height 300px
    text-align center
    width 300px
    font-size 50px
    font-family "Helvetica Neue"
    font-weight bold
    color white

  .radar-label-disabled
    font-size 20px



  .radar-sweep
    position absolute
    width 100%
    height 100%
    top 0
    left 0
    border-radius 150px
    overflow hidden
    opacity 0.4
    -webkit-animation sweep-animation 8s linear infinite
    -webkit-transform-origin 50% 50%

    .sweep
      position absolute
      top 140px
      left 85px
      width 100px
      height 20px
      background-image -webkit-linear-gradient(top, rgba(255, 255, 255, 1), rgba(255, 255, 255, 0))
      @css {
        -webkit-transform: perspective( 45px ) rotateY( 45deg );
      }


.page:not(.active) .css-radar .radar-sweep
    -webkit-animation sweep-animation none;


