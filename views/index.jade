extends layout

block content
  script(src="http://www.html5canvastutorials.com/libraries/kinetic-v4.0.3.js")
  style
    html, body {
      width:  100%;
      height: 100%;
    }
    body {
      margin: 0px;
      padding: 0px;
    }
    .container {
      position: fixed;
      border: 1px solid red;
      width: 100%;
      height: 100%;
      background: lightGray;
    }
    #myCanvas {
      width: 90%;
      height: 90%;
      padding-top: 20px;
    }
    #container {
      background: lightGray;
    }
    .foreground {
      z-index: 100
    }
  div#container

block javascript_content
  != js('radar')
  script
    $(function() { 
      radar = new Radar();
      radar.add_circle(205, "TRIAL");
      radar.add_circle(300, "HOLD");
      radar.add_circle(250, "ACCESS");
      radar.add_circle(255);
      radar.add_circle(110, "ADOPT");

      radar.draw_horizontal_line(20);
      radar.draw_vertical_line(20);
      radar.generate_technologies()
      radar.draw_main_layer()
    });
