extends layout

block content
  script(src="http://www.html5canvastutorials.com/libraries/kinetic-v4.0.3.js")
  style
    html, body {
      width:  100%;
      height: 100%;
    }
    body {
      margin: 0px;
      padding: 0px;
    }
    .container {
      position: fixed;
      border: 1px solid red;
      width: 100%;
      height: 100%;
      background: lightGray;
    }
    #myCanvas {
      width: 90%;
      height: 90%;
      padding-top: 20px;
    }
    #container {
      background: lightGray;
    }
    .foreground {
      z-index: 100
    }
  div#container

block javascript_content
  != js('radar')
  != js('circle')
  != js('circles_collection')
  script
    $(function() { 
      radar = new Radar();
      x = radar.x
      y = radar.y
      circles_collection = new CirclesCollection(x,y)
      radar.add_circles(circles_collection);

      radar.draw_horizontal_line(20)
      radar.draw_vertical_line(20)
      radar.generate_technologies()
      radar.draw_main_layer()
    });
