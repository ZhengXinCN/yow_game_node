extends layout

block content
  script(src="http://www.html5canvastutorials.com/libraries/kinetic-v4.0.3.js")
  style
    html, body {
      width:  100%;
      height: 100%;
    }
    body {
      margin: 0px;
      padding: 0px;
    }
    .container {
      position: fixed;
      border: 1px solid red;
      width: 100%;
      height: 100%;
      background: lightGray;
    }
    #myCanvas {
      width: 90%;
      height: 90%;
      padding-top: 20px;
    }
  div.container
    canvas#myCanvas

block javascript_content
  != js('radar')
  script
    $(function() { 
      circle = new Radar();
      circle.draw_circle(205);
      circle.draw_circle(275);
      circle.draw_circle(240);
      circle.draw_circle(245);
      circle.draw_circle(110);

      circle.draw_horizontal_line(20);
      circle.draw_vertical_line(20);
    });
