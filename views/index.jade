block content
  style
    html, body {
      width:  100%;
      height: 100%;
    }
    body {
      margin: 0px;
      padding: 0px;
    }
    #container {
      background: white;
      position:fixed;
      width: 864px;
      heigh: 694px;
      top: 40px;
      left: 50%;
      margin-left: -432px;
    }
    .foreground {
      z-index: 100
    }


  //- canvas#background
  #container.foreground

block javascript_content
  script(src="/bootstrap/js/bootstrap.js")
